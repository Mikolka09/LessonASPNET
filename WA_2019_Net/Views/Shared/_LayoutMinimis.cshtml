<!DOCTYPE html>
<html lang="ru">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    @{ string keywords;
        if (@ViewBag.Keyword == null)
        {
            keywords = "ITStep, Asp.Net, Html, Css, Обучение";
        }
        else
        {
            keywords = @ViewBag.Keyword;
        } }
    <meta name="keywords" content="@keywords">
    @{ string Description;
        if (@ViewBag.Description == null)
        {
            Description = "ITStep, Asp.Net, Html, Css, Обучение";
        }
        else
        {
            Description = @ViewBag.Keyword;
        } }
    <meta name="description" content="@Description">
    <!-- Fonts-->
    @Styles.Render("~/Content/minimis/fonts/fontawesome/font-awesome.min.css")
    @Styles.Render("~/Content/minimis/fonts/pe-icon/pe-icon.css")
    <!-- Vendors-->
    @Styles.Render("~/Content/minimis/vendors/bootstrap/grid.css")
    @Styles.Render("~/Content/minimis/vendors/magnific-popup/magnific-popup.min.css")
    @Styles.Render("~/Content/minimis/vendors/swiper/swiper.css")

    <!-- App & fonts-->
    @Styles.Render("~/Content/minimis/css/main.css")
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700|Open+Sans:400,700">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <div class="page-wrap" id="root">

        <!-- header -->
        <header class="header header--fixed">
            <div class="header__inner">
                <div class="header__logo"><a href="index.html"><img src="/Content/minimis/img/logo.png" alt="" style="width: 122px;" /></a></div>
                <div class="navbar-toggle" id="fs-button">
                    <div class="navbar-icon"><span></span></div>
                </div>
            </div>

            <!-- fullscreenmenu__module -->
            <div class="fullscreenmenu__module" trigger="#fs-button">

                <!-- overlay-menu -->
                <nav class="overlay-menu">

                    <!--  -->
                    <ul class="wil-menu-list">
                        <li class="current-menu-item">
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="/Home/About">About</a>
                        </li>
                        @*<li>
                                <a href="work.html">Work</a>
                            </li>
                            <li>
                                <a href="blog.html">Blog</a>
                            </li>*@
                        <li>
                            @Html.ActionLink("Contact", "Contact", "Home")
                        </li>
                    </ul><!--  -->

                </nav><!-- End / overlay-menu -->

            </div><!-- End / fullscreenmenu__module -->

        </header><!-- End / header -->
        <!-- Content-->
        <div class="wil-content">
            <!-- Section -->
            <section class="awe-section">
                <div class="container">

                    @{ if (ViewBag.isMyTitle != null)
                        { <!-- page-title -->
                            <div class="page-title">
                                <h2 class="page-title__title">
                                    Hello, my name is Nick Matios.<br>I

                                    <!-- typing__module -->
                                    <div class="typing__module">
                                        <div class="typed-strings">
                                            <span>'m a web designer</span><span> do creative</span><span>'m a frontend developer</span>
                                        </div><span class="typed"></span>
                                    </div><!-- End / typing__module -->

                                </h2>
                                <p class="page-title__text"></p>
                                <div class="page-title__divider"></div>
                            </div><!-- End / page-title --> }
                      else
                      { <!-- page-title -->
                            <div class="page-title pb-40">
                                <h2 class="page-title__title">@ViewBag.Title</h2>
                                <p class="page-title__text">@ViewBag.TitleDescription</p>
                                <div class="page-title__divider"></div>
                            </div><!-- End / page-title --> 
                      } }

                </div>
            </section>
            <!-- End / Section -->
            @RenderBody()
        </div>
        <!-- End / Content-->
        <!-- footer -->
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-6 ">
                        <p class="footer__coppy">2018 &copy; Copyright <a href="http://awe7.com/">Awe7</a>. All rights Reserved.</p>
                    </div>
                    <div class="col-md-6 col-lg-6 ">
                        <div class="footer__social">

                            <!-- social-icon -->
                            <a class="social-icon" href="#">
                                <i class="social-icon__icon fa fa-facebook"></i>
                            </a><!-- End / social-icon -->
                            <!-- social-icon -->
                            <a class="social-icon" href="#">
                                <i class="social-icon__icon fa fa-twitter"></i>
                            </a><!-- End / social-icon -->
                            <!-- social-icon -->
                            <a class="social-icon" href="#">
                                <i class="social-icon__icon fa fa-linkedin"></i>
                            </a><!-- End / social-icon -->
                            <!-- social-icon -->
                            <a class="social-icon" href="#">
                                <i class="social-icon__icon fa fa-behance"></i>
                            </a><!-- End / social-icon -->
                            <!-- social-icon -->
                            <a class="social-icon" href="#">
                                <i class="social-icon__icon fa fa-vimeo"></i>
                            </a><!-- End / social-icon -->

                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End / footer -->

    </div>
    <!-- Vendors-->
    <script type="text/javascript" src="/Content/minimis/vendors/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/imagesloaded/imagesloaded.pkgd.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/isotope-layout/isotope.pkgd.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/jquery-one-page/jquery.nav.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/jquery.easing/jquery.easing.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/jquery.matchHeight/jquery.matchHeight.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/masonry-layout/masonry.pkgd.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/jquery.waypoints/jquery.waypoints.min.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/swiper/swiper.jquery.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/menu/menu.js"></script>
    <script type="text/javascript" src="/Content/minimis/vendors/typed/typed.min.js"></script>
    <!-- App-->
    <script type="text/javascript" src="/Content/minimis/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
<
</html>